<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">
    <TextView
            android:id="@+id/title_Auth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mytrello_title"
            android:textSize="@dimen/auth_fragment_title_size"
            android:textColor="@android:color/black"
            android:layout_margin="@dimen/spacing_normal_16"
            android:textAlignment="center"/>
    <TextView
            android:id="@+id/auth_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/auth_fragment_subtitle"
            android:textSize="@dimen/auth_fragment_subtitle_size"
            android:textColor="@android:color/black"
            android:layout_margin="@dimen/spacing_normal_16"
            android:layout_below="@+id/title_Auth"
            android:textAlignment="center"/>
    <Button

            android:id="@+id/btn_authorize_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_auth_get_authorization"
            android:layout_below="@+id/auth_subtitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/spacing_normal_16"/>
    <TextView
            android:id="@+id/tv_response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    <WebView
            android:id="@+id/wv_test"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>
</RelativeLayout>
