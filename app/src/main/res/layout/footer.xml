<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
            android:id="@+id/cv_singleBoard_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardPreventCornerOverlap="true"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="1dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardBackgroundColor="#ffffff">
        <TextView
                android:id="@+id/btn_singleBoard_footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_singleBoard_footer_text"
                android:textSize="18sp"
                android:layout_margin="@dimen/spacing_normal_16"
                android:textColor="@color/colorAccent"
                android:gravity="center_horizontal"/>
        <EditText
                android:id="@+id/et_singleBoard_footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:hint="@string/et_singleBoard_footer_hint"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:layout_marginStart="@dimen/spacing_normal_16"
                android:layout_marginEnd="@dimen/spacing_normal_16"/>

    </androidx.cardview.widget.CardView>
</LinearLayout>